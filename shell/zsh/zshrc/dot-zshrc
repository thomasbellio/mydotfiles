# Source the modules manager
source $DOTFILES_DIR/shell/zsh/module-manager.zsh

# Set profiles directory
ZSH_PROFILES_DIR="${DOTFILES_ZSH_PROFILES_DIR:-$DOTFILES_DIR/shell/zsh/profiles}"

# Display confirmation
module_debug "ZSH configuration loaded successfully"

# Load the appropriate profiles
IFS=';' read -rA PROFILES <<< "$DOTFILES_ZSH_MODULE_PROFILES"
for PROFILE in "${PROFILES[@]}"; do
  if [[ -f "$DOTFILES_DIR/shell/zsh/profiles/$PROFILE.zsh" ]]; then
    module_debug "Loading profile: $PROFILE"
    source "$DOTFILES_DIR/shell/zsh/profiles/$PROFILE.zsh"
  else
    echo "Warning: Profile '$PROFILE' not found, falling back to default"
    if [[ -f "$DOTFILES_DIR/shell/zsh/profiles/default.zsh" ]]; then
      module_debug "Loading default profile"
      source "$DOTFILES_DIR/shell/zsh/profiles/default.zsh"
    else
      echo "Error: Default profile not found!"
      # Load core modules as fallback
      register_module "core"
      register_module "git"
      register_module "prompt"
      register_module "secrets"
    fi
  fi
done

mm_load_modules_

# Display confirmation
module_debug "ZSH configuration loaded successfully"
