# Set the dotfiles directory
export ZSH_MODULE_DEBUG=${ZSH_MODULE_DEBUG:-0}

export DOTFILES_DIR="$HOME/dotfiles"
# Source the feature manager
source $DOTFILES_DIR/zsh/feature-manager.zsh

# Register core system features
register_module "core"  # Core ZSH functionality, no dependencies
register_module "git"
register_module "prompt"
# Load enabled features
load_modules

# Display confirmation
_module_debug "ZSH configuration loaded successfully"
